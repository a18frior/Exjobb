{
	"compilerOptions": {
		"outDir": "lib",
		"rootDir": "src",
		"tsBuildInfoFile": "tmp/.tsbuildinfo",
		"target": "es6",
		"declaration": true,
		"module": "es6",
		"moduleResolution": "node",
		"esModuleInterop": true,
        "experimentalDecorators": true,
        "strict": true,
        "jsx": "react",
        "allowJs": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"composite": true,
		"incremental": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2015", "es2016", "es2017", "es2018", "es2019", "dom"
		]
	},
	"include": [
		"src"
	]
}